/*****************************
SISTEMA
*****************************/

//Tabla de Log de Errores
Table sysdlog {
  id_error int [pk]
  descripcion_error varchar
  fecha_error datetime
}
//tablas Codigos del las tablas
Table systcod {
  id_cod int [pk]
  codigo varchar
  descripcion varchar
}

//Nombres de las tablas
Table systab {
  id_tabla int [pk]
  nombre_tabla varchar
}



/*****************************
Principales Tablas
*****************************/

Table Usuarios {
  id_usuario int [pk]
  nombre varchar
  email varchar
  id_rol int [ref: > Roles.id_rol]
}

Table Roles {
  id_rol int [pk]
  nombre_rol varchar
}

Table Inscripciones {
  id_inscripcion int [pk]
  id_usuario int [ref: > Usuarios.id_usuario]
  id_curso int [ref: > Cursos.id_curso]
  fecha_inscripcion datetime
  estado varchar
}

Table Cursos {
  id_curso int [pk]
  nombre_curso varchar
}

Table Modulos {
  modulos_id integer [primary key]
  curso_id varchar
  cTitulo varchar
  cDescri varchar
  tModifi datetime
  id_curso int
}

Table Evaluaciones {
  id_evaluacion int [pk]
  tipo_evaluacion varchar
  fecha_evaluacion datetime
  id_modulos int
}

Table Calificaciones {
  id_calificacion int [pk]
  id_usuario int [ref: > Usuarios.id_usuario]
  id_evaluacion int [ref: > Evaluaciones.id_evaluacion]
  calificacion decimal
  fecha_calificacion datetime
}


/*****************************
Inteligencia Artifical
*****************************/

Table Respuestas {
    id_respuesta INT [pk]
    id_evaluacion INT 
    id_usuario INT 
    respuesta TEXT 
    fecha_respuesta DATETIME 
}


Table Resultados {
id_resultado INT [pk]
    id_evaluacion int
    id_usuario int
    puntuacion FLOAT
    fecha_resultado DATETIME
}


Table Feedback {
    id_feedback INT [pk]
    id_respuesta INT 
    comentario TEXT 
    fecha_feedback DATETIME 
}

Ref: "Evaluaciones"."id_evaluacion" < "Respuestas"."id_evaluacion"

/*****************************
UBIGEO
*****************************/


// Tablas de Paises
Table paises {
  id int [pk, increment]
  nombre varchar(255)
}

//Tabla de Departamentos
Table departamentos {
  id int [pk, increment]
  nombre varchar(255)
  pais_id int [ref: > paises.id]
}

//Tabla de provincias
Table provincias {
  id int [pk, increment]
  nombre varchar(255)
  departamento_id int [ref: > departamentos.id]
}

//Tabla de distritos
Table distritos {
  id int [pk, increment]
  nombre varchar(255)
  provincia_id int [ref: > provincias.id]
}



Ref: "Cursos"."id_curso" < "Modulos"."id_curso"

Ref: "Modulos"."modulos_id" < "Evaluaciones"."id_modulos"

/**/

Ref: "Usuarios"."id_usuario" < "Respuestas"."id_usuario"

Ref: "Evaluaciones"."id_evaluacion" < "Resultados"."id_evaluacion"

Ref: "Usuarios"."id_usuario" < "Resultados"."id_usuario"



Ref: "Respuestas"."id_respuesta" < "Feedback"."id_respuesta"